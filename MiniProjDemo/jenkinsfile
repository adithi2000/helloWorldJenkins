pipeline {
    agent any
    triggers { 
      githubPush() 
   }
    environment {
        DOCKER_IMAGE_NAME = 'calculator'
        GITHUB_REPO_URL = 'https://github.com/BThangaraju/MiniProject.git'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout the code from the GitHub repository
                    git branch: 'main', url: "${GITHUB_REPO_URL}"
                }
            }
        }
stage('Debug Workspace') {
    steps {
        sh 'ls -R'
    }
}

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${DOCKER_IMAGE_NAME}", './MiniProjDemo')
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script{
                    docker.withRegistry('https://index.docker.io/v1/', 'DockerhubID') {
                    sh 'docker tag calculator adithip/calculator:latest'
                    sh 'docker push adithip/calculator'
                    }
                 }
            }
        }

stage('Run Ansible Playbook') {
    steps {
        withCredentials([usernamePassword(credentialsId: 'localhost',
                                         usernameVariable: 'USER',
                                         passwordVariable: 'PASS')]) {
            sh """
            ansible-playbook -i MiniProjDemo/inventory MiniProjDemo/deploy.yml \
            -e ansible_user=$USER \
            -e ansible_ssh_pass=$PASS
            """
        }
    }
}

    }
}
